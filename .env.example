# =============================================================================
# Required Configuration - All variables below must be set
# =============================================================================

# Oracle Database Configuration
ORACLE_USER=your_oracle_user
ORACLE_PASSWORD=your_oracle_password
ORACLE_DSN=localhost:1521/FREEPDB1

# Inference Provider (ollama or openai)
INFERENCE_PROVIDER=ollama

# Ollama LLM Configuration (REQUIRED if INFERENCE_PROVIDER=ollama)
OLLAMA_MODEL=gpt-oss:20b
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=240.0
OLLAMA_NUM_CTX=8192
OLLAMA_TEMPERATURE=0.7

# OpenAI LLM Configuration (REQUIRED if INFERENCE_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=60.0

# ChromaDB Configuration
CHROMA_COLLECTION=vanna_memory
CHROMA_PERSIST_DIR=./chroma_db

# Server Configuration
VANNA_HOST=0.0.0.0
VANNA_PORT=8000
VANNA_LOG_LEVEL=info
FLASK_ENV=production

# LDAP Authentication Configuration
LDAP_HOST=ldap
LDAP_PORT=389
LDAP_BASE_DN=dc=vanna,dc=ai
LDAP_USER_DN_TEMPLATE=cn={username},ou=users,dc=vanna,dc=ai
LDAP_ADMIN_GROUP_DN=cn=admin,ou=groups,dc=vanna,dc=ai
LDAP_BIND_DN=cn=admin,dc=vanna,dc=ai
LDAP_BIND_PASSWORD=your_ldap_password
LDAP_USE_SSL=false

# LDAP Service Configuration (for docker-compose)
LDAP_ORGANISATION=Vanna
LDAP_DOMAIN=vanna.ai
LDAP_ADMIN_PASSWORD=Vanna123
LDAP_SSL_PORT=636

# =============================================================================
# Optional Configuration - These have defaults and can be omitted
# =============================================================================

# User Configuration
EMAIL_DOMAIN=vanna.ai
GUEST_USERNAME=guest
GUEST_EMAIL=guest@vanna.ai

# UI Configuration
UI_SHOW_API_ENDPOINTS=true
