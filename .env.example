# Flask Configuration
FLASK_ENV=production

# Oracle Database Configuration
ORACLE_USER=your_oracle_user
ORACLE_PASSWORD=your_oracle_password
ORACLE_DSN=localhost:1521/FREEPDB1

# Ollama LLM Configuration (used if OPENAI_API_KEY is not set)
OLLAMA_MODEL=gpt-oss:20b
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=240.0
OLLAMA_NUM_CTX=8192
OLLAMA_TEMPERATURE=0.7

# OpenAI LLM Configuration (optional - if set, will be used instead of Ollama)
# OPENAI_API_KEY=your_openai_api_key
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_MODEL=gpt-4
# OPENAI_TEMPERATURE=0.7
# OPENAI_TIMEOUT=60.0

# ChromaDB Configuration (Agent Memory)
CHROMA_COLLECTION=vanna_memory
CHROMA_PERSIST_DIR=/app/chroma_db

# Server Configuration
VANNA_HOST=0.0.0.0
VANNA_PORT=8000
VANNA_LOG_LEVEL=info

# =============================================================================
# LDAP Authentication Configuration
# =============================================================================
# These settings configure the LDAP client in the Vanna app

# LDAP Server Connection
LDAP_HOST=ldap
LDAP_PORT=389
LDAP_USE_SSL=false

# LDAP Directory Structure
LDAP_BASE_DN=dc=vanna,dc=ai
LDAP_USER_DN_TEMPLATE=cn={username},ou=users,dc=vanna,dc=ai
LDAP_ADMIN_GROUP_DN=cn=admin,ou=groups,dc=vanna,dc=ai

# LDAP Bind Credentials (for searching users/groups)
LDAP_BIND_DN=cn=admin,dc=vanna,dc=ai
LDAP_BIND_PASSWORD=Vanna123

# =============================================================================
# LDAP Server Container Configuration (osixia/openldap)
# =============================================================================
# These settings configure the Docker LDAP server container

LDAP_ORGANISATION=Vanna
LDAP_DOMAIN=vanna.ai
LDAP_ADMIN_PASSWORD=Vanna123

# =============================================================================
# User Configuration
# =============================================================================
# Default settings for guest users and email domain

EMAIL_DOMAIN=vanna.ai
GUEST_USERNAME=guest
GUEST_EMAIL=guest@vanna.ai
